<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            style="-fx-background-color: gray; -fx-border-width: 0 0 0 3; -fx-border-color: black;"
            xmlns="http://javafx.com/javafx/17.0.12"
            fx:controller="org.tuvarna.controller.report_panel.DistributorReport">
    <VBox alignment="CENTER" spacing="15" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
        <HBox alignment="CENTER" spacing="10">
            <Label text="Report Panel" textFill="WHITE">
                <font>
                    <Font name="Droid Sans Mono Slashed" size="24.0"/>
                </font>
            </Label>
        </HBox>
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="button1" onAction="#handleButtonOne"
                    style="-fx-background-color: #ffb83e; -fx-min-height: 40; -fx-min-width: 140; -fx-background-radius: 10;"
                    text="Action 1" textFill="WHITE">
                <font>
                    <Font name="Droid Sans Mono Slashed" size="16.0"/>
                </font>
            </Button>
            <Button fx:id="button2" onAction="#handleButtonTwo"
                    style="-fx-background-color: #4caf50; -fx-min-height: 40; -fx-min-width: 140; -fx-background-radius: 10;"
                    text="Action 2" textFill="WHITE">
                <font>
                    <Font name="Droid Sans Mono Slashed" size="16.0"/>
                </font>
            </Button>
        </HBox>
    </VBox>
</AnchorPane>
