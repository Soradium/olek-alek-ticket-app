<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="454.0" prefWidth="698.0" style="-fx-background-color: gray;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.tuvarna.controller.CompanyController">
    <center>
        <VBox alignment="CENTER" prefWidth="698.0" spacing="20">
            <HBox alignment="CENTER" spacing="10">
                <Label text="Available Trips" textFill="WHITE">
               <font>
                  <Font name="Droid Serif Bold" size="18.0" />
               </font></Label>
            </HBox>
            <ListView fx:id="tripListView" prefHeight="130" prefWidth="300" style="-fx-background-color: #cfd4d2; -fx-wrap-text: true;" />
            <HBox alignment="CENTER" spacing="10">
                <Button onAction="#showInfo" style="-fx-background-radius: 10; -fx-background-color: #abc1ff;" text="Update all info">
               <font>
                  <Font name="Droid Serif" size="13.0" />
               </font></Button>
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Label text="Company Rating: " textFill="WHITE">
               <font>
                  <Font name="Droid Serif" size="15.0" />
               </font></Label>
                <Label fx:id="ratingLabel" textFill="#f8f8f8">
               <font>
                  <Font name="Droid Serif" size="15.0" />
               </font></Label>
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Label text="Available Buses" textFill="WHITE">
               <font>
                  <Font name="Droid Serif Bold" size="16.0" />
               </font></Label>
            </HBox>
            <ListView fx:id="busListView" prefHeight="130" prefWidth="300" style="-fx-background-color: #cfd4d2;" />
            <HBox alignment="CENTER" spacing="10">
                <Button onAction="#addBus" text="Add new Bus" />
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <TextField fx:id="departure" promptText="Enter Departure Location" />
                <TextField fx:id="destination" promptText="Enter Destination" />
                <TextField fx:id="timeOfDeparture" promptText="Enter Time of Departure (YYYY-MM-DD)" />
                <TextField fx:id="tripType" promptText="Enter Trip Type" />
            </HBox>
            <HBox alignment="CENTER">
                <Button alignment="CENTER" contentDisplay="CENTER" onAction="#addTrip" text="Add Trip" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
