<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12"
            fx:controller="org.tuvarna.controller.DistributorController">
    <center>
        <VBox alignment="CENTER" spacing="20">
            <VBox spacing="10" alignment="CENTER">
                <Label text="Companies"/>
                <ListView fx:id="companiesListView" prefHeight="150" prefWidth="300"
                          onMouseClicked="#loadCompanyTrips"/>
            </VBox>
            <VBox spacing="10" alignment="CENTER">
                <Label text="Trips Provided by Selected Company"/>
                <ListView fx:id="companyTripsListView" prefHeight="150" prefWidth="300"/>
            </VBox>
            <VBox spacing="10" alignment="CENTER">
                <Label text="Already Available Trips"/>
                <ListView fx:id="availableTripsListView" prefHeight="150" prefWidth="300"/>
            </VBox>
            <HBox spacing="20" alignment="CENTER">
                <Button text="Request Trip" onAction="#requestTrip"/>
                <Button text="Show Info" onAction="#showInfo"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="cashierName" promptText="Enter Cashier Name"/>
                <Button text="Create Cashier" onAction="#createCashier"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
