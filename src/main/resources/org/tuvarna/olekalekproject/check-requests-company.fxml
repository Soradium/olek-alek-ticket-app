<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane style="-fx-background-color: gray; -fx-border-width: 0 0 0 3; -fx-border-color: black;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.tuvarna.controller.CompToDistrPanelControllerImpl">
    <VBox alignment="CENTER" spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
        <HBox alignment="CENTER" spacing="10">
            <Label text="Pending Requests" textFill="WHITE">
            <font>
               <Font name="Droid Sans Mono Slashed" size="24.0" />
            </font></Label>
            <Button onAction="#reloadRequests" style="-fx-background-radius: 10; -fx-background-color: #ffb83e; -fx-min-width: 140; -fx-text-fill: White; -fx-min-height: 40;" text="Reload">
            <font>
               <Font name="Droid Sans Mono Slashed" size="16.0" />
            </font></Button>
        </HBox>

        <!-- Request List -->
        <ListView fx:id="requestListView" prefHeight="400" prefWidth="600" style="-fx-background-color: #f4f4f4;" />
    </VBox>
</AnchorPane>
