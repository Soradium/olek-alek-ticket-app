<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane style="-fx-background-color: gray; -fx-border-width: 0 0 0 3px; -fx-border-color: black; -fx-start-margin: 10px" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.tuvarna.controller.CompToDistrPanelControllerImpl">
    <VBox alignment="CENTER" spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
        <HBox alignment="CENTER" spacing="10">
            <Label text="Pending Requests" textFill="WHITE">
            <font>
               <Font name="Droid Serif" size="24.0" />
            </font></Label>
            <Button onAction="#reloadRequests" text="Reload" />
        </HBox>

        <!-- Request List -->
        <ListView fx:id="requestListView" prefHeight="400" prefWidth="600" style="-fx-background-color: #cfd4d2;" />
    </VBox>
</AnchorPane>
